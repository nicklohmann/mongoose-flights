<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/index.css">
<%- include('../partials/nav') %>

<main>
  <h1>All Flights</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>FlightNo</th>
        <th>Departs</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(flight => { %>
        <tr>
          <td><a href="/flights/<%=flight._id%>"><%= flight.airline %></a></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs %></td>
          <td><form action="/flights/<%= flight._id %>?_method=DELETE"
                    class="delete-form"
                    method="POST"
                  >
                    <button type="submit">X</button>
              </form>
          </td>
        </tr>
        <%}) %>
    </tbody>
  </table>
</main>



<%- include('../partials/footer') %>